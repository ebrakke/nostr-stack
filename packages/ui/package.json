    "@types/react-dom": "^18.0.10",
    "@vitejs/plugin-react": "^3.1.0",
    "autoprefixer": "^10.4.13",
    "nostr-tools": "^1.7.1",
    "postcss": "^8.4.21",
    "prop-types": "^15.8.1",
    "storybook": "^7.0.0-beta.60",
    "tailwindcss": "^3.2.7",
    "typescript": "^4.9.3",
    "vite": "^4.1.0"
